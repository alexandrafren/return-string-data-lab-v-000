<%= @products.each do |p| %>
  <%= p.name %>
  <div id="body-<%=p.id%>">
    <%= truncate p.description %>
  </div>
  <button class="js-more" data-id="<%=p.id%>">More Info</button>
<% end %>


<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".js-more").on('click', function() {
      let id = $(this).data("id");
      $.get("/products" + id + "/body", function(data){
        $("#body-" + id).text(data);
      });
    });
  });
